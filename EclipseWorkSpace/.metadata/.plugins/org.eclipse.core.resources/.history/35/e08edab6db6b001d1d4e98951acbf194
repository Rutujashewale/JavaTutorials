import java.sql.ResultSet;
import java.util.*;
import java.sql.*;
public class EmpData {
	static List<Employee> employee = null;
	static List<Person> person=null;
	static Connection con = null;
	static  Statement st = null;
	public static void main(String args[]) {
		databaseConnection();
		employee=emp();
		person=person();
	}
	
	public static void databaseConnection() {
		String driverClassName
        = "org.postgresql.Driver";
    String url = "jdbc:postgresql://localhost:5432/EmployeeData";
    String username = "postgres";
     String password = "postgres";
    
    // Load driver class
	try{
    Class.forName(driverClassName);
	
    // Obtain a connection

     con = DriverManager.getConnection(
        url, username, password);
	}catch(Exception e){
		System.out.println("Exception occured" +e.getMessage());
	}
    
}
	
	public static List<Employee> emp(){
		
		List<Employee> emp=new ArrayList<>();
		String selectQuery = "SELECT * FROM  \"EmployeeData\"";
		
		try{
			st = con.createStatement();
			ResultSet rs = st.executeQuery(selectQuery);
			
			while(rs.next()){
				String Emp_id = rs.getString("Emp_id");
				System.out.println("Employee id:" +rs.getString("Emp_id"));
				
				Employee e=new Employee(Emp_id);
				emp.add(e);
			}  
			
		}catch(Exception e){
			System.out.println("");
		}	
		System.out.println(emp);
		return emp;
	}
	
	public static List<Person> person(){
		List<Person> person = new ArrayList<>();
		String selectQuery = "SELECT * FROM  \"EmployeeData\"";
		
		try{
			st = con.createStatement();
			ResultSet rs = st.executeQuery(selectQuery);
			
			while(rs.next()){
				int age = rs.getInt("age");
				String name = rs.getString("name");
				System.out.println("Age:" +rs.getInt("age"));
				System.out.println("Name:" +rs.getString("name"));	
				Person person1=new Person(age,name);
				person.add(person1);
			}  
		}catch(Exception e){
			System.out.println("");
		}	
		System.out.println(person);
		return person;
	}
		
	}